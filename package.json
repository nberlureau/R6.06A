{
  "name": "glossai",
  "version": "0.2.0",
  "scripts": {
    "postinstall": "npm install --prefix frontend",
    "dev": "npm run build:backend && concurrently \"npm run dev --prefix frontend\" \"cargo tauri dev\"",
    "build": "npm run build:mkOutputDir && npm run build:frontend && npm run build:backend && npm run build:tauri",
    "build:mkOutputDir": "node -e \"require('fs').mkdirSync('build', { recursive: true });\"",
    "build:frontend": "npm run build --prefix frontend",
    "build:backend": "pyinstaller -y -F -w --distpath ./build/dist --workpath ./build/pybuild --specpath ./backend -n backend backend/main.py && node move-binaries.js",
    "build:tauri": "cargo tauri build",
    "tauri": "cargo tauri"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@tauri-apps/plugin-dialog": "^2.5.0"
  }
}
