{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glossai",
  "version": "0.3.0",
  "identifier": "fr.unilim.iut.glossai",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:4321"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "GlossAI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "http": {
      "scope": [
        "http://127.0.0.1:*",
        "http://localhost:*"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "msi",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "../build/dist/backend",
      "../build/dist/ollama"
    ]
  }
}